<link rel="stylesheet" href="https://getbootstrap.com/docs/4.0/examples/grid/grid.css"/>
 <!-- Latest compiled and minified JavaScript -->
 <!-- ko with: home -->
<span data-bind="text:  books().length, visible: books().length > 0"></span>
 <h2 class="sub-header">Книги</h2>
<div class="table-responsive"></div>
<table class="table table-striped" data-bind="visible: books().length > 0">
	<thead>
	<tr>
		<th>Название</th>
		<th>Авторы</th>
		<th>Количество страниц</th>
		<th>Название издательства</th>
		<th>Год публикации</th>
		<th>ISBN</th>
		<th>Изображение</th>
	</tr>
	</thead>
	<tbody data-bind="foreach: books">
	<tr data-bind="click: $parent.selectBook">
		<td data-bind="text: title"></td>
		<td data-bind="text: authors().length"></td>
		<td data-bind="text: numPages"></td>
		<td data-bind="text: pubHouseName"></td>
		<td data-bind="text: publishYear"></td>
		<td data-bind="text: isbn"></td>
		<td><img data-bind="attr: {src: imageUrl}"/></td>
	</tr>
	</tbody>
</table>

<form data-bind="visible: (!!selectedBook), with: selectedBook" class="form-horizontal">
	<div class="form-group row">
		<label for="inputTitle">Название</label>
		<input class="form-control" id="inputTitle"
		        data-bind="value: title">
	</div>
	<div class="form-group row">
		<label for="inputNumPages">Количество страниц</label>
		<input class="form-control" id="inputNumPages"
			     data-bind="value: numPages">
	</div>
	<div class="form-group row">
		<label for="selectPubHouse">Издательство</label> 
		<select id="selectPubHouse"
		        data-bind="selectPicker:true, options: $parent.pubHouses ,
				optionsText: 'name',  optionsValue: 'pubHouseId',
				value: pubHouseId">
		</select>
	 
	</div>
	<div class="form-group row">
		<label for="inputPublishYear">Год публикации</label>
		<input class="form-control" id="inputPublishYear"
		       data-bind="value: publishYear">
	</div>
	<div class="form-group row">
		<label for="inputISBN">ISBN</label>
		<input class="form-control" id="inputISBN"
			   data-bind="value: isbn">
	</div>

	<div class="form-group row">
		<label for="exampleInputFile">File input</label>
		<input type="file" id="exampleInputFile">
		<p class="help-block">Example block-level help text here.</p>
	</div>
	 
	<button  data-bind="click:  $parent.saveBook"  class="btn btn-default">Отправить</button>
</form>

<button class="btn btn-primary" data-bind='click: addBook'>Добавить книгу</button>

